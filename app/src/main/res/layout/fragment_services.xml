<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".services.ServicesFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/sarabun_regular"
        android:text="Please select categories and enter at most 10 items to be delivered to you."
        android:textColor="@color/color_black"
        android:textSize="17sp" />

    <AutoCompleteTextView
        android:id="@+id/storeCategoryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_white_soft_box"
        android:elevation="5dp"
        android:fontFamily="@font/sarabun_regular"
        android:hint="Select Category"
        android:padding="8dp"
        android:textColor="@color/color_black"
        android:textSize="17sp" />


    <EditText
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_soft_box"
        android:elevation="5dp"
        android:fontFamily="@font/sarabun_regular"
        android:hint="Enter up to 10 items"
        android:inputType="textMultiLine"
        android:lines="2"
        android:padding="8dp"
        android:textColor="@color/color_black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/storeAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_soft_box"
        android:elevation="5dp"
        android:fontFamily="@font/sarabun_regular"
        android:gravity="center_vertical"
        android:hint="Select store address"
        android:lines="2"
        android:padding="8dp"
        android:textColor="@color/color_black"
        android:textSize="17sp" />

    <fragment
        android:id="@+id/autocomplete_fragment"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deliveryAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_soft_box"
        android:elevation="5dp"
        android:fontFamily="@font/sarabun_regular"
        android:gravity="center_vertical"
        android:hint="Select delivery address"
        android:lines="2"
        android:padding="8dp"
        android:textColor="@color/color_black"
        android:textSize="17sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/buyServiceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        app:cardBackgroundColor="#97DFD0"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sarabun_regular"
            android:gravity="center"
            android:paddingVertical="7dp"
            android:text="Buy Service"
            android:textColor="@color/color_black"
            android:textSize="17sp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>